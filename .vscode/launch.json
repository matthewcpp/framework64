{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Data Link Sample Client - MacOS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_desktop/tools/data_link_client/data_link_example_client",
            "args": ["desktop"],
            // "args": ["n64", "${workspaceFolder}/build_n64_libultra/bin/data_link.z64"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "Data Link Sample Client - Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_desktop/tools/data_link_client/Debug/data_link_example_client.exe",
            //"args": ["desktop"],
            "args": ["n64", "${workspaceFolder}/build_n64_libultra/bin/data_link.z64"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Data Link Asset Service - MacOS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_desktop/tools/asset_transfer_webservice/data_link_asset_service",
            "args": ["--framework64-dir", "${workspaceFolder}", "desktop"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Data Link Asset Service - Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_desktop/tools/asset_transfer_webservice/Debug/data_link_asset_service.exe",
            // "args": ["--framework64-dir", "${workspaceFolder}", "desktop"],
            "args": ["--framework64-dir", "${workspaceFolder}", "n64_libultra", "${workspaceFolder}/build_n64/bin/data_link_asset_viewer.z64"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Asset Pipeline",
            "program": "${workspaceFolder}/scripts/PrepareExampleAssets.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            // "args":["shading_modes", "n64_libultra"]
            //"args":["spin_n64", "n64_libdragon"]
            "args":["bounding", "desktop"]
        },
        {
            "type": "by-gdb",
            "name": "CEN64 Debug ROM Windows / Mac",
            "request": "launch",
            "debuggerPath": "gdb-multiarch",
            "program": "${workspaceFolder}/build_n64_libultra/examples/billboard/billboard.elf",
            "remote": {
                "enabled": true,
                "address": "host.docker.internal:8080",
                "mode": "remote",
                "execfile": "${workspaceFolder}/build_n64_libultra/examples/billboard/billboard.elf"
            },
            "commandsBeforeExec": [
                "set arch mips:4300",
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "by-gdb",
            "name": "CEN64 Debug ROM Linux",
            "request": "launch",
            "debuggerPath": "gdb-multiarch",
            "program": "${workspaceFolder}/build_n64_libultra/examples/rendermodes/rendermodes.elf",
            "remote": {
                "enabled": true,
                "address": "localhost:8080",
                "mode": "remote",
                "execfile": "${workspaceFolder}/build_n64_libultra/examples/rendermodes/rendermodes.elf"
            },
            "commandsBeforeExec": [
                "set arch mips:4300",
            ],
            "cwd": "${workspaceRoot}",
        }
    ]
}