{
    "buildType": {
        "default": "debug",
        "choices": {
            "debug": {
                "short": "Debug",
                "buildType": "Debug",
                "settings": {
                    "CMAKE_BUILD_TYPE": "Debug"
                }
            },
            "release": {
                "short": "Release",
                "buildType": "Release",
                "settings": {
                    "CMAKE_BUILD_TYPE": "Release"
                }
            }
        }
    },
    "platform": {
        "default": "desktop",
        "choices": {
            "desktop": {
                "short": "Desktop",
